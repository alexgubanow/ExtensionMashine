<Window x:Class="controlExtension.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:controlExtension"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid DataContext="{Binding Source={StaticResource Locator}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txt1" Text="{Binding Main.MainWin.text1}" Grid.Column="0" Width="20" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <TextBox x:Name="txt2" Text="fgdjtfhkfu" Grid.Column="1" Height="20" HorizontalContentAlignment="Right" />
        <Button Grid.Column="2" Content="Button" HorizontalAlignment="Right" VerticalAlignment="Center" 
                x:Name="btn1" Width="75" Click="btn1_Click"/>
    </Grid>
</Window>
